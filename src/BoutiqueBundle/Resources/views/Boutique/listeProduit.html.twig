{% extends "base.html.twig" %}



{% block content %}

    <div class="main-content">

        <div id="content-header">
            <h1>Tableau des Outils <h6> (Si vous voulez ajouter un autre outil , cliquez sur "Ajouter" et si vous voulez consulter les notifications cliquez sur "Notifications")</h6> <a  class="btn btn-outline-success btn-rounded" href="{{ path('boutique_homepage_ajouter_produit') }}">Ajouter </a>
                <a class="btn btn-outline-warning btn-rounded" href="{{ path('boutique_homepage_notif') }}">Notifications</a></h1>
        </div>
        <div id="content-header">
            <h6> Vous pouvez aussi chercher l'outil que vous voulez dans la case "search" ! Vouz pouvez aussi trier le tableau !  </h6>

        </div>
    <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                                <tr>
                                    <th style="color: #0e90d2">#ID</th>
                                    <th style="color: #0e90d2">Nom</th>
                                    <th style="color: #0e90d2">Description</th>
                                    <th style="color: #0e90d2"> Prix</th>
                                    <th style="color: #0e90d2"> Remise</th>
                                    <th style="color: #0e90d2"> Quantit√©</th>
                                    <th style="color: #0e90d2"> Marque</th>
                                    <th style="color: #0e90d2"> Categorie</th>
                                    <th style="color: #0e90d2"> Date Fabication</th>
                                    <th style="color: #0e90d2"> Photo</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                </tr>
                        </thead>
                                <tbody>

                                {% for pr in ev %}
                                    <tr>

                                        <td>{{ pr.id }}</td>
                                        <td>{{ pr.libelle }}</td>
                                        <td>{{ pr.description }}</td>
                                        <td>{{ pr.prix }}</td>
                                        <td>{{ pr.remise }}</td>
                                        <td>{{ pr.quantiteDispo }}</td>
                                        <td>{{ pr.marque }} </td>
                                        <td>{{ pr.categorie.libelle }} </td>
                                        <td>{{ pr.dateFabrication | date }}</td>
                                        <td><img src="{{ asset('Uploads/images/' ~ pr.image ) }}" width="50px" height="50px"></td>
                                        <td><a class="badge badge-info" href="{{ path('boutique_homepage_modifier_produit',{'id':pr.id}) }}">Modifier</a></td>
                                        <td><a class="badge badge-danger" href="{{ path('boutique_homepage_supprimer_produit',{'id':pr.id}) }}">Supprimer</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
    </div>






{% endblock %}