{% extends 'base.html.twig' %}

{% block content %}

        <!-- BEGIN .page-header -->
        <header class="page-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="page-title">
                            <h3>Rud Tables</h3>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="right-stats">

                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- END: .page-header -->

        <!-- BEGIN .main-content -->
        <div class="main-content">

            <!-- Row start -->
            <div class="row gutters">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">

                    <!-- Card start -->
                    <div class="card">
                        <div class="card-header">
                            <button class="btn btn-primary">Total des événements : <span class="badge badge-warning">

                                    {{ ev|length }}

                                </span></button>
                        </div>

                        <div class="card-body">

                            <div class="alert alert-primary">

                                <form method="POST">

                                    <table>
                                        <tr>
                                            <td>
                                                <b> Trier par intitulée :  </b></td><td><input type="text" name="intitule" class="form-control">
                                            </td>
                                            <td>
                                                <b> Trier par date :  </b></td><td><input type="date" name="date_ev" class="form-control">
                                            </td>
                                            <td>
                                    <input type="submit" name="chercher" value="Chercher" class="btn btn-outline-dark btn-rounded">
                                            </td>
                                        </tr>
                                    </table>
                                </form>

                            </div>

                        </div>
                    </div>
                    <!-- Card end -->

                    <!-- Card start -->
                    <div class="card">
                        <div class="card-header">

                            Table événement

                        </div>
                        <div class="card-body">

                            <!--*************************
                            *************************
                            *************************
                            Basic Table start
                            *************************
                            *************************
                            *************************-->

                            <div class="table-responsive">
                                <table class="table m-0">
                                    <thead>
                                    <tr>
                                        <th>Intitulé</th>
                                        <th>Description</th>
                                        <th>Adresse</th>
                                        <th>Date et heure</th>
                                        <th>Catégorie</th>
                                        <th>Image</th>
                                        <th></th>
                                       <th> <button type="button" onclick="window.location.href='http://localhost/pi/web/app_dev.php/boutique/admin/ajout';" class="btn btn-outline-primary btn-rounded">Ajouter</button></th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for b in ev %}

                                        <tr>

                                            <td>{{b.intitulee_ev}}</td>
                                            <td>{{b.description_ev }}</td>
                                            <td>{{b.adresse_ev }}</td>
                                            <td>{{b.date_ev|date('d/m/yy--h:m') }}</td>
                                            <td>{{b.categorie.intitulee_cat}}</td>
                                            <td><img src="{{ asset('Uploads/images/' ~ b.image ) }}" width="50" height="50"></td>
                                            <td><a href="{{ path('evenement_modifer',{'id_ev':b.id_ev}) }}" class="btn btn-success">Modifier</a></td>
                                            <td><a href="{{ path('evenement_supprimer',{'id_ev':b.id_ev}) }}" class="btn btn-danger">Supprimer</a></td>

                                        </tr>

                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <!--*************************
                            *************************
                            *************************
                            Basic Table end
                            *************************
                            *************************
                            *************************-->

                        </div>
                    </div>
                    <!-- Card end -->


                    <!-- Card start -->
                    <div class="card">
                        <div class="card-header">Table Catégorie</div>
                        <div class="card-body">

                            <!--*************************
                            *************************
                            *************************
                            Basic Table start
                            *************************
                            *************************
                            *************************-->

                            <div class="table-responsive">
                                <table class="table m-0">
                                    <thead>

                                    <tr>
                                        <th>Intitulé</th>
                                        <th></th>
                                        <th><button type="button" onclick="window.location.href='http://localhost/pi/web/app_dev.php/events/ajoutCat';" class="btn btn-outline-primary btn-rounded">Ajouter</button></th>
                                    </tr>

                                    <tr></tr>
                                    </thead>
                                    <tbody>

                                    {% for c in cat %}

                                        <tr>

                                            <td>{{c.intitulee_cat}}</td>
                                            <td><a href="{{ path('evenement_modifier_cat',{'id_cat':c.id_cat}) }}" class="btn btn-success">Modifier</a></td>
                                            <td><a href="{{ path('evenement_supprimer_cat',{'id_cat':c.id_cat}) }}" class="btn btn-danger">Supprimer</a></td>

                                        </tr>

                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                            <!--*************************
                            *************************
                            *************************
                            Basic Table end
                            *************************
                            *************************
                            *************************-->

                        </div>
                    </div>
                    <!-- Card end -->

        </div>
        <!-- END: .main-content -->
{% endblock %}