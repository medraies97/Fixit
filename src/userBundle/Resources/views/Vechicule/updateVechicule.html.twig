{% extends 'base.html.twig' %}

{% block content %}
{{ form_start(f) }}

    <!-- Card starts -->
    <div class="card">
        <div class="card-body">

            <!--*************************
            *************************
            *************************
             Contact Form Start
            *************************
            *************************
            *************************-->



            <!-- Row start -->
            <div class="row justify-content-center gutters">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">

                        <div class="form-block">
                            <div class="form-block-header">
                                <h5>Modifier Vechicule</h5>

                            </div>
                            <div class="form-block-body">
                                <div class="form-group">
                                  {{ form_widget(f.matricule ,{'attr':{'class':'form-control' , 'placeholder':'matricule'}} ) }}
                                </div>
                                <div class="form-group">
                                  {{ form_widget(f.marque ,{'attr':{'class':'form-control' ,'placeholder':'marque'}} ) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(f.statut ,{'attr':{'class':'form-control' ,'Placeholder':'statut'}} ) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(f.localisation ,{'attr':{'class':'form-control','Placeholder':'localisation' }}) }}
                                </div>


                                <input type="submit" value="Modifier"  class="btn btn-primary pull-right">
                            </div>
                        </div>

                </div>
            </div>
            <!-- Row end -->



            <!--*************************
            *************************
            *************************
             Contact Form End
            *************************
            *************************
            *************************-->

        </div>

    </div>

{{ form_end(f) }}
{% endblock %}

