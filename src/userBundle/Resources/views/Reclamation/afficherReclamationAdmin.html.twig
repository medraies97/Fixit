{% extends 'base.html.twig' %}

{% block content %}
    <!-- BEGIN: .main-content -->
    <div class="main-content">
        <div class="table-users">
            <div class="header"><h4 style="font-weight: bold"><center>Liste des Réclamation</center></h4></div>

            <div class="x_content">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>

                    <th>id Reclamation</th>
                <th>destinataire</th>
                <th>objet Reclamation</th>
                <th>desc Reclamation</th>
                <th>status Reclamation</th>
                <th>date Reclamation</th>
                <th>Afficher Détailles</th>
                <th>Supprimer réclamation</th>
                    </thead>
                {% for reclamation in Rec %}
                    <tr>
                        <td>{{ reclamation.idReclamation }}</td>
                        <td>{{ reclamation.idsource }}</td>
                        <td>{{ reclamation.objetReclamation }}</td>
                        <td>{{ reclamation.descReclamation }}</td>
                        <td>{{ reclamation.statusReclamation }}</td>
                        <td>{{ reclamation.dateReclamation }}</td>
                        <td><a id="Afficon"  href="{{ path('modifier_Reclamation_Admin',{'idReclamation':reclamation.idReclamation, 'objet':reclamation.objetReclamation,'description':reclamation.descReclamation,
                                'status':reclamation.statusReclamation,'date':reclamation.dateReclamation}) }}">Afficher</a></td>
                        <td><a href="{{ path('supprimer_Reclamation_Admin',{'idReclamation':reclamation.idReclamation })}}" >Supprimer</a></td>


                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}