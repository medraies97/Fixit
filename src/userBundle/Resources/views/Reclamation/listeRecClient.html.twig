{% extends 'baseClient.html.twig' %}

{% block content %}


    <center><h2 style="font-weight: 800;
    letter-spacing: .5px;
    font-size: 35px;
    margin-bottom: 1.9em;
    text-align: center;
    color: #000;
    text-transform: capitalize;
    position: relative;">Réclamation
        <span style="display: block;
