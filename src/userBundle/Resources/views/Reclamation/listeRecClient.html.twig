        <th>Status Reclamation</th>
        <th>Reponse</th>
        <th>Date Reclamation</th>
        <th>Supprimer réclamation</th>
            <th>Modifier réclamation</th>
        {% for reclamation in Rec %}
            <tr>
                <td>{{ reclamation.destinationReclamation }}</td>
                <td>{{ reclamation.objetReclamation }}</td>
                <td>{{ reclamation.descReclamation }}</td>
                <td>{{ reclamation.statusReclamation }}</td>
                <td>{{ reclamation.reponseReclamation }}</td>
                <td>{{ reclamation.dateReclamation }}</td>
                <td><a href="{{ path('delete_Reclamation',{'idReclamation':reclamation.idReclamation }) }}" >Supprimer</a></td>
                <td><a href="{{ path('Modifier_Reclamation',{'idReclamation':reclamation.idReclamation }) }}" >Modifier</a></td>
            </tr>
        {% endfor %}
    </table>
</div>

