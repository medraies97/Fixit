{% extends 'base.html.twig' %}

{% block content %}
    <!-- BEGIN: .main-content -->
    <div class="main-content">
        <div class="table-users">
            <div class="header"><h4 style="font-weight: bold">Liste des Avertissement</h4></div>
            <div class="x_content">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>

                <th>Username</th>
                <th>id Avertissement</th>
                <th>objet Avertissement</th>
                <th>desc Avertissement</th>
                <th>date Reclamation</th>
                <th>Supprimer Avertissement</th>
                    </thead>
                {% for Avertissement in Avert %}
                    <tr>
                        <td>{{ Avertissement.destinationAvertissement }}</td>
                        <td>{{ Avertissement.idAvertissement }}</td>
                        <td>{{ Avertissement.objetAvertissement }}</td>
                        <td>{{ Avertissement.descAvertissement }}</td>
                        <td>{{ Avertissement.dateAvertissement }}</td>
                        <td><a href="{{ path('supprimer_Avertissement_Admin',{'idAvertissement':Avertissement.idAvertissement })}}" >Supprimer</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}