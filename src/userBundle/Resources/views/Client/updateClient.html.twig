{% extends 'base.html.twig' %}

{% block content %}
    <div class="main-content">
        <link href="{{asset('admin/css/bootstrap.min.css')}}" rel="stylesheet" />
        <link href="{{asset('admin/bootstrap/css/bootstrap.css')}}" rel="stylesheet" />
        <script src="{{asset('admin/bootstrap/js/bootstrap.js')}}"></script>

        <!-- Enter change here ya ta7foun  -->

        <div style="margin-left: 200px">
            {{ form_start(form, { 'attr' : {'novalidate' : 'novalidate'}}) }}
            <div class="form-group">
                {# Les erreurs générales du formulaire . #}
                {{ form_errors(form) }}</div>

            <div  class="form-group">

                {# Génération du label. #}
                {{ form_label( form.nom , "Nom : ") }}
                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors( form.nom ) }}
                {# Génération de l'input. #}
                {{ form_widget( form.nom,{'attr':{'class':'tki'}}) }}
            </div>
            <div  class="form-group">
                {# Génération du label. #}
                {{ form_label( form.prenom , "prenom : ") }}
                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors( form.prenom ) }}
                {# Génération de l'input. #}
                {{ form_widget( form.prenom,{'attr':{'class':'tki'}}) }}
            </div>

            <div  class="form-group">
                {# Génération du label. #}
                {{ form_label( form.username , "Username : ") }}
                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors( form.username ) }}
                {# Génération de l'input. #}
                {{ form_widget( form.username,{'attr':{'class':'tki'}}) }}

            </div>
            <div  class="form-group">
                {# Génération du label. #}
                {{ form_label( form.email , "Email : ") }}
                {# Affichage des erreurs pour ce champ précis. #}
                {{ form_errors( form.email ) }}
                {# Génération de l'input. #}
                {{ form_widget( form.email,{'attr':{'class':'tki'}}) }}

            </div>

            <div  class="form-group">
                {{ form_row( form.plainPassword.first,{'attr':{'class':'tki'}}) }}

            </div>
            <div  class="form-group">
                {{ form_row( form.plainPassword.second,{'attr':{'class':'tki'}}) }}

            </div>
            <div  class="form-group">
                {{ form_row( form.tel,{'attr':{'class':'tki'}}) }}

            </div>
        </div>
        <div class="form-group">{{ form_widget( form.save,{'attr':{'class':'btnsave'}}) }}
            {{ form_widget( form.reset,{'attr':{'class':'btnresate'}}) }}
        </div>
        {{ form_end(form) }}



        <!-- end block ya 5arya -->
    </div>
    <style>
        .btnresate{
            width: 300px;
            height: 43px;
            background-color: #5eb5e0;
            margin-left: 100px;
        }
        .btnsave{
            width: 300px;
            height: 43px;
            background-color: #ec971f;
            margin-left: 200px;
        }
        .tki{

            width: 600px;
            height: 40px;
            display: block;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        }
        .sell{
            width: 402px;
            height: 43px;
            display: block;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: url("{{ asset('Etudiant/images/imgmsg.png') }}");
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        }
    </style>
{% endblock %}
